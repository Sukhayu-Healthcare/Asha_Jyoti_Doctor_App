<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ashajoyti_doctor_app">

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
   
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />

    <!-- Additions for audio recording -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/asha_jyoti_app_logo"
        android:roundIcon="@drawable/asha_jyoti_app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme_ASHA_JYOTI_DOCTOR_APP"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.RoleSelectionActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.CHOLoginActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.CHODashboardActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.MedicalOfficerActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.CivilHospitalDoctorActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.EmergencyDoctorActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.ChiefHealthOfficerActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.CHOProfileActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.PatientQueueActivity" android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.PastConsultationsActivity" android:exported="false" android:label="Past Consultations" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.PatientDetailsActivity" android:exported="false" />

        <!-- Activities updated to match your Kotlin class names -->
        <activity android:name=".doctorapp.ConsultationDetailActivity" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.VideoCallActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="false" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.VitalsActivity" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.ExaminationActivity" />
        <activity android:name="com.example.ashajoyti_doctor_app.doctorapp.PrescriptionActivity" />

        <!-- Added missing activities referenced by the app -->
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.QuickPrescriptionActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.VoiceCallActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.ChatFallbackActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.QueriesActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.QueryDetailActivity"
            android:exported="false" />

    </application>
</manifest>
