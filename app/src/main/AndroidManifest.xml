<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/asha_jyoti_app_logo"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ASHA_JYOTI_DOCTOR_APP">

        <!-- Launcher Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.RoleSelectionActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.CHOLoginActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.CHODashboardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.MedicalOfficerActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.CivilHospitalDoctorActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.EmergencyDoctorActivity"
            android:exported="false" />
        <activity
            android:name="com.example.ashajoyti_doctor_app.doctorapp.ChiefHealthOfficerActivity"
            android:exported="false" />

    </application>
</manifest>
