<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/item_patient_queue.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top row: index + avatar + name + severity (severity hidden by default) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvIndex"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="#01"
                android:textSize="16sp"
                android:textColor="#7A8B95"
                android:textStyle="bold"
                android:gravity="center" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivInitial"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_person_placeholder"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Mohan Gupta"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#222"/>

                    <!-- severity badge: keep it available but hidden by default -->
                    <TextView
                        android:id="@+id/tvSeverity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:background="@drawable/badge_yellow"
                        android:textColor="#6B4F00"
                        android:layout_marginStart="8dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvPatientId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient ID: P003"
                    android:textSize="13sp"
                    android:textColor="#666"
                    android:layout_marginTop="6dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Meta / symptoms / wait -->
        <TextView
            android:id="@+id/tvMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age: 55, Gender: male"
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tvSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms: cold, cough, sore throat"
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tvWait"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Est. Wait: 15 minutes"
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginTop="6dp" />

        <!-- Buttons row: improved styling so text always visible -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStart"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Start Consultation"
                app:iconGravity="textStart"
                android:textAllCaps="false"
                android:insetLeft="12dp"
                android:insetRight="12dp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#0B4470"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTagEmergency"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tag as Emergency"
                android:textAllCaps="false"
                android:insetLeft="12dp"
                android:insetRight="12dp"
                app:cornerRadius="10dp"
                app:backgroundTint="#D81B47"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
