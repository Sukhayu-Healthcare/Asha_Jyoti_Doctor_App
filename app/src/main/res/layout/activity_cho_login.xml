<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:useCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/asha_jyoti_logo"
                    android:contentDescription="logo"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick login with pre-filled credentials"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp" />

                <!-- CHO ID label and field (ID used by activity: edtUsername) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHO ID"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/edtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:hint="CHO001"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:padding="12dp" />

                <!-- OTP label and field (ID used by activity: edtPassword) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter OTP"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:inputType="numberPassword"
                    android:hint="123456"
                    android:layout_marginTop="8dp"
                    android:padding="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Demo OTP: 123456"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />

                <!-- Login button (ID used by activity: btnLogin) -->
                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:layout_marginTop="14dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample credentials are pre-filled. Just click Login!\nAvailable demo IDs: CHO001"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#7a7a7a"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
