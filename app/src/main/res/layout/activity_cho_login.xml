<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient"
    android:padding="18dp">

    <!-- Make this container fill the screen and center its contents -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="24dp">

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:useCompatPadding="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="18dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/asha_jyoti_logo"
                    android:contentDescription="logo"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#111111" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quick login with pre-filled credentials"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"/>

                <!-- CHO ID label and editable field (placeholder CHO001) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CHO ID"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/et_cho_id"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/field_bg"
                    android:gravity="center_vertical|start"
                    android:hint="CHO001"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"/>

                <!-- OTP label and editable field (treated as password) -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter OTP"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp" />

                <EditText
                    android:id="@+id/et_otp"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:inputType="numberPassword"
                    android:background="@drawable/field_bg"
                    android:gravity="center_vertical|center_horizontal"
                    android:hint="123456"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Demo OTP: 123456"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp"/>

                <!-- Login button -->
                <Button
                    android:id="@+id/btn_login_cho"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:layout_marginTop="14dp"
                    android:backgroundTint="#0B0B12"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- bottom helper text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample credentials are pre-filled. Just click Login!\nAvailable demo IDs: CHO001"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="#7a7a7a"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

</ScrollView>
