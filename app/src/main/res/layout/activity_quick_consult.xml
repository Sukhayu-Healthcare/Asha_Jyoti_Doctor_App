<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/quickConsultRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <!-- Container ensures proper top-to-bottom flow (prevents overlapping) -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Patient Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPatientDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Header Row: avatar + name/id -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/patientAvatar"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#E0E0E0"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <!-- Name label + value -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name:"
                                android:textColor="#666"
                                android:textSize="13sp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:id="@+id/tvPatientName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="मोहन गुप्ता"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#222"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>

                        <!-- ID below name -->
                        <TextView
                            android:id="@+id/tvPatientId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P003"
                            android:textSize="13sp"
                            android:textColor="#888"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Details Row: Age and Gender (separate) -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="start">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age:"
                        android:textColor="#666"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tvPatientAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55 yrs"
                        android:textColor="#222"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender:"
                        android:textColor="#666"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tvPatientGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="#222"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- horizontal divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#ECECEC"/>

                <!-- Expanded patient detail row: last visit + location -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvLastVisit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last visit: 2025-11-28"
                            android:textColor="#666"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location: Ward 3B"
                            android:textColor="#666"
                            android:textSize="13sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Communication Card: separate clickable controls -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Communication"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnStartVideo"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Video Call"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#1877F2"
                    android:drawableLeft="@drawable/ic_videocam"
                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnStartVoice"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Voice Call"
                    android:textAllCaps="false"
                    android:textColor="#222"
                    android:backgroundTint="#F5F5F7"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawablePadding="12dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnStartChat"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Text Chat"
                    android:textAllCaps="false"
                    android:textColor="#222"
                    android:backgroundTint="#F5F5F7"
                    android:drawableLeft="@drawable/ic_chat"
                    android:drawablePadding="12dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Consultation panel: use weight so it occupies the remaining space -->
        <androidx.cardview.widget.CardView
            android:id="@+id/consultationPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_margin="16dp"
            app:cardPreventCornerOverlap="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:color/white"
                android:elevation="0dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabIndicatorColor="#4CAF50"
                app:tabIndicatorHeight="3dp"
                app:tabSelectedTextColor="#4CAF50"
                app:tabTextColor="#757575"
                app:tabTextAppearance="@style/TextAppearance.MaterialComponents.Button"/>

            <!-- ViewPager2 -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@android:color/white"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- mini-call overlay container remains on top -->
    <FrameLayout
        android:id="@+id/overlayContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:background="@android:color/transparent"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
