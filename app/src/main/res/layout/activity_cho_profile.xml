<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/choProfileScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F7F9FB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- reuse header -->
        <include
            android:id="@+id/includeHeader"
            layout="@layout/include_header" />

        <!-- Main single card containing avatar + all details -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/choMainCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:foreground="?attr/selectableItemBackground"
            android:padding="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Top row: avatar left, heading + small subtitle right -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Avatar -->
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivAvatar"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:src="@drawable/ic_person_placeholder"
                            android:contentDescription="doctor avatar" />

                        <ImageButton
                            android:id="@+id/btnChangePhoto"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom|end"
                            android:layout_margin="4dp"
                            android:background="@drawable/camera_circle_bg"
                            android:src="@drawable/ic_camera"
                            android:tint="@android:color/white"
                            android:contentDescription="Change photo" />
                    </FrameLayout>

                    <!-- Name + Role -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:id="@+id/tvProfileTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor Profile"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#0B2B3A" />

                        <TextView
                            android:id="@+id/tvProfileSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chief Health Officer — CHO"
                            android:textSize="13sp"
                            android:layout_marginTop="6dp"
                            android:textColor="#576778" />

                        <!-- small stats row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID:"
                                android:textStyle="bold"
                                android:textColor="#334155"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:id="@+id/etDoctorId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CHO001"
                                android:textColor="#0B2B3A"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- subtle divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:background="#E6EEF3" />

                <!-- All details in single grouped block (labels + values) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Row: Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="#475569"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <!-- read-only field styled plain (still a TextInputEditText for kotlin compatibility) -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFullName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:background="@android:color/transparent"
                            android:text="Dr. Amit Kumar"
                            android:textColor="#0B2B3A"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Row: Phone -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Phone"
                            android:textColor="#475569"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:background="@android:color/transparent"
                            android:text="+91-9876543213"
                            android:textColor="#0B2B3A"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Row: Designation -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Designation"
                            android:textColor="#475569"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDesignation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:background="@android:color/transparent"
                            android:text="Chief Health Officer"
                            android:textColor="#0B2B3A"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <!-- Row: Role -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Role"
                            android:textColor="#475569"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etRole"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:enabled="false"
                            android:background="@android:color/transparent"
                            android:text="CHO"
                            android:textColor="#0B2B3A"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- spacing -->
                <Space android:layout_width="match_parent" android:layout_height="12dp" />

                <!-- Buttons row (Edit left, Logout right) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditProfile"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:text="Edit Profile" />

                    <Space android:layout_width="12dp" android:layout_height="wrap_content" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:text="Logout"
                        android:backgroundTint="@color/design_default_color_error"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Capabilities Card (kept below for clarity) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/capabilitiesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCapabilitiesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctor Capabilities"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvCapabilitiesIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="As a Chief Health Officer, you can:"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp" />

                <!-- bullet list -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cap1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Handle Yellow severity cases (primary care)"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/cap2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Escalate to Medical Officer for Orange cases"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/cap3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Escalate to Emergency Doctor for Red cases"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/cap4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Access patient medical history"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/cap5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Record vitals and examination findings"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/cap6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• Issue digital prescriptions"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:id="@+id/cap7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="• View nearby pharmacy inventory"
                        android:layout_marginBottom="6dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
