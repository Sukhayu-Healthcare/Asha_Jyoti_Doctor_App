<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prescriptionRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Top action row -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end">
        <Button android:id="@+id/btnAddFirstMedicine" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add First Medicine" />
        <Space android:layout_width="8dp" android:layout_height="wrap_content" />
        <Button android:id="@+id/btnAddMedicine" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Add Medicine" />
    </LinearLayout>

    <TextView android:id="@+id/tvEmptyPrescription" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="No medicines prescribed yet" android:gravity="center" android:layout_marginTop="24dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMedicines"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone" />

</LinearLayout>
