<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- Logo -->
        <!-- Logo Above the Title -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/asha_jyoti_logo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="Asha Jyoti Logo"
        android:scaleType="centerInside" />

    <!-- Title -->
            <!-- android:text="ASHA JYOTI" -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#0B3A80"
        android:textStyle="bold"
        android:layout_marginTop="5dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your specific role"
            android:textSize="16sp"
            android:textColor="#6B6B6B"
            android:layout_marginTop="8dp"/>

        <!-- Cards container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp">

            <!-- Card 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_chief"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/title_chief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Community Health Officer"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111111"/>

                    <TextView
                        android:id="@+id/sub_chief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Primary healthcare management"
                        android:textSize="13sp"
                        android:textColor="#7A7A7A"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_medical"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="14dp">

                    <TextView
                        android:id="@+id/title_medical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medical Officer"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#111111"/>

                    <TextView
                        android:id="@+id/sub_medical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Advanced medical consultations"
                        android:textSize="13sp"
                        android:textColor="#7A7A7A"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

