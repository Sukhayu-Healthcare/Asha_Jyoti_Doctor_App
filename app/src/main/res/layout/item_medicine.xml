<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView android:id="@+id/tvMedicineName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medicine Name" android:textStyle="bold" />
    <TextView android:id="@+id/tvMedicineDosage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dosage" />
    <TextView android:id="@+id/tvMedicineFrequency" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Frequency" />
    <TextView android:id="@+id/tvMedicineDuration" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Duration" />

</LinearLayout>
