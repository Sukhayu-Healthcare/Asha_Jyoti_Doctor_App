<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#0B4470"
    android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:title=""
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp">

        <!-- Small Logo -->
        <ImageView
            android:id="@+id/appLogoSmall"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/asha_jyoti_app_logo"
            android:layout_gravity="center_vertical|start"
            android:contentDescription="app logo" />

        <!-- Space -->
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <!-- ROLE TEXT (BOLD + BIG + LEFT) -->
        <TextView
            android:id="@+id/headerRoleShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chief Health Officer"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp" />

        <!-- Push everything else to right -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </com.google.android.material.appbar.MaterialToolbar>
</com.google.android.material.appbar.AppBarLayout>
