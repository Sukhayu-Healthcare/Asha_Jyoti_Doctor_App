<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#0B4470"
    android:paddingStart="12dp"
    android:paddingEnd="12dp">

    <ImageView
        android:id="@+id/appLogoSmall"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="app logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ASHA JYOTI Doctor"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/appLogoSmall"
        app:layout_constraintTop_toTopOf="@id/appLogoSmall"
        app:layout_constraintBottom_toBottomOf="@id/appLogoSmall"
        app:layout_constraintEnd_toStartOf="@id/headerRoleShort"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/headerRoleShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chief Health Officer"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/appLogoSmall"
        app:layout_constraintBottom_toBottomOf="@id/appLogoSmall"
        android:layout_marginEnd="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
