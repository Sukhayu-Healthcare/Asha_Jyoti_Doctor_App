<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F7F9FB"
    android:padding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER (use include_header.xml placed in res/layout/) -->
        <include
            android:id="@+id/includeHeader"
            layout="@layout/include_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- PROFILE SUMMARY CARD (clickable) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profileCard"
            android:layout_width="0dp"
            android:layout_height="112dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toBottomOf="@id/includeHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- avatar -->
                <ImageView
                    android:id="@+id/headerAvatar"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerVertical="true"
                    android:src="@android:drawable/sym_def_app_icon"
                    android:contentDescription="avatar"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentStart="true" />

                <!-- name / designation block -->
                <LinearLayout
                    android:id="@+id/nameBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toEndOf="@id/headerAvatar"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dr. Amit Kumar"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/tvDesignation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chief Health Officer"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/tvId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CHO001"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:padding="12dp" />
                </LinearLayout>

                <!-- profile clickable at end -->
                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- STATUS CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/statusCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/profileCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/tvStatusSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are available for consultations"
                    android:layout_below="@id/tvStatusTitle"
                    android:layout_marginTop="6dp"
                    android:textSize="13sp"
                    android:padding="12dp" />

                <LinearLayout
                    android:id="@+id/availableBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvAvailableBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="Available"
                        android:background="@drawable/available_badge"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:checked="true" />
                </LinearLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- METRICS ROW (three cards) -->
        <LinearLayout
            android:id="@+id/metricsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@id/statusCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp">

            <!-- Metric 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/ic_today"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_menu_today"
                        android:tint="#0B4470" />

                    <TextView
                        android:id="@+id/tvTodayCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/tvTodayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Consultations"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Metric 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/ic_queue"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:tint="#F57C00" />

                    <TextView
                        android:id="@+id/tvQueueCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/tvQueueLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Queue"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Metric 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/ic_waiting"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@android:drawable/ic_media_pause"
                        android:tint="#2E7D32" />

                    <TextView
                        android:id="@+id/tvWaitingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:padding="12dp" />

                    <TextView
                        android:id="@+id/tvWaitingLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Waiting"
                        android:textSize="12sp"
                        android:layout_marginTop="8dp"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- FEATURE GRID (2-column) - spacing handled via child margins; uniform heights -->
        <GridLayout
            android:id="@+id/featureGrid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="false"
            app:layout_constraintTop_toBottomOf="@id/metricsRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp">

            <!-- Patient Queue -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPatientQueue"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:padding="14dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvPatientQueueTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient Queue"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Manage patient queue and start consultations"
                        android:textSize="12sp"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="4 patients waiting"
                        android:textSize="12sp"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Consultation -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuick"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:padding="14dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvQuickTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Consultation"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Start next consultation immediately"
                        android:textSize="12sp"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Ready to start"
                        android:textSize="12sp"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Redirection -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRedirect"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:padding="14dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvRedirectTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Redirection Demo"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="View sample patient redirection notifications"
                        android:textSize="12sp"
                        android:padding="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Sample CHO â†’ MO/Civil Hospital notifications"
                        android:textSize="12sp"
                        android:padding="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </GridLayout>

        <!-- RECENT CONSULTATIONS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/recentCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:padding="18dp"
            app:layout_constraintTop_toBottomOf="@id/featureGrid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRecentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Consultations"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:padding="12dp" />

                <ImageView
                    android:id="@+id/ic_recent_calendar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="#6B7280" />

                <TextView
                    android:id="@+id/tvRecentSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="No consultations today"
                    android:textSize="13sp"
                    android:padding="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
