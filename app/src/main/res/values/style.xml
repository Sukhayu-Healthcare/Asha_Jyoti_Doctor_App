<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Light-only MaterialComponents theme (app-wide). -->
    <style name="Theme_ASHA_JYOTI_DOCTOR_APP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Core colors -->
        <item name="colorPrimary">#0B4470</item>
        <item name="colorPrimaryVariant">#072440</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorSecondary">#6D376D</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Ensure widgets use MaterialComponents styles -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>

        <!-- Prevent Android 10+ Force Dark -->
        <item name="android:forceDarkAllowed">false</item>

        <!-- System UI colors -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

</resources>
